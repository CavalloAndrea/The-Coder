<% provide(:title, @quiz.titolo) %>
<head>
<script type="text/javascript">
	function Controlla(){
		var score = 0;

		array1 = document.getElementsByName('1');
		for(i=0;i<array1.length;i++){
			if(array1[i].checked){
				if(array1[i].value == '<%= @quiz.g1%>' )
					score += 1;
			}
		}

		array2 = document.getElementsByName('2');
		for(i=0;i<array2.length;i++){
			if(array2[i].checked){
				if(array2[i].value == '<%= @quiz.g2%>' )
					score += 1;
			}
		}

		array3 = document.getElementsByName('3');
		for(i=0;i<array3.length;i++){
			if(array3[i].checked){
				if(array3[i].value == '<%= @quiz.g3%>' )
					score += 1;
			}
		}

		array4 = document.getElementsByName('4');
		for(i=0;i<array4.length;i++){
			if(array4[i].checked){
				if(array4[i].value == '<%= @quiz.g4%>' )
					score += 1;
			}
		}

		array5 = document.getElementsByName('5');
		for(i=0;i<array5.length;i++){
			if(array5[i].checked){
				if(array5[i].value == '<%= @quiz.g5%>' )
					score += 1;
			}
		}

		if(score<3){
			alert("Peccato hai totalizzato " + score +"/5, devi ripassare la lezione e ripetere il quiz."); 
		}
		if(score>=3){
			alert("Complimenti hai totalizzato " + score +"/5" +", puoi passare alla lezione successiva!");
			document.getElementById("prossima").disabled =false;
			
		}

		<% if @quiz.id <=10 %>
			<% if current_user.c < @quiz.id %>
				<%= current_user.update(:c => params[:id]) %>
			<%end%>

		<% elsif @quiz.id >10 && @quiz.id <=20 %>
			<% if current_user.java < @quiz.id %>
				<%= current_user.update(:java => params[:id]) %>
			<%end%>

		<% elsif @quiz.id >20 && @quiz.id <=30 %>
			<% if current_user.python < @quiz.id %>
				<%= current_user.update(:python => params[:id]) %>
			<%end%>

		<% elsif @quiz.id >30 && @quiz.id <=40 %>
			<% if current_user.assembly < @quiz.id %>
				<%= current_user.update(:assembly => params[:id]) %>
			<%end%>

		<% elsif @quiz.id >40 && @quiz.id <=50 %>
			<% if current_user.sql < @quiz.id %>
				<%= current_user.update(:sql => params[:id]) %>
			<%end%>

		<% elsif @quiz.id >50 && @quiz.id <=60 %>
			<% if current_user.html < @quiz.id %>
				<%= current_user.update(:html => params[:id]) %>
			<%end%>

		<% elsif @quiz.id >60 && @quiz.id <=70 %>
			<% if current_user.css < @quiz.id %>
				<%= current_user.update(:css => params[:id]) %>
			<%end%>

		<% elsif @quiz.id >70 && @quiz.id <=80 %>
			<% if current_user.javascript < @quiz.id %>
				<%= current_user.update(:javascript => params[:id]) %>
			<%end%>

		<% end %>




		
	}
</script>

</head>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1><%= @quiz.titolo %></h1>

      
        <p><b>Domanda1:</b><br> <%= @quiz.d1 %></p>

        <input style="width: 0px;" type="radio" name="1" value="<%= @quiz.r1_1 %>"> <%= @quiz.r1_1 %> <br>
        <input style="width: 0px;" type="radio" name="1" value="<%= @quiz.r1_2 %>"> <%= @quiz.r1_2 %> <br>
