        <input style="width: 0px;" type="radio" name="4" value="<%= @quiz.r4_1 %>"> <%= @quiz.r4_1 %> <br>
        <input style="width: 0px;" type="radio" name="4" value="<%= @quiz.r4_2 %>"> <%= @quiz.r4_2 %> <br>
        <input style="width: 0px;" type="radio" name="4" value="<%= @quiz.r4_3 %>"> <%= @quiz.r4_3 %> <br>

        <hr>

        <p><b>Domanda5:</b><br> <%= @quiz.d5 %></p>

        <input style="width: 0px;" type="radio" name="5" value="<%= @quiz.r5_1 %>"> <%= @quiz.r5_1 %> <br>
        <input style="width: 0px;" type="radio" name="5" value="<%= @quiz.r5_2 %>"> <%= @quiz.r5_2 %> <br>
        <input style="width: 0px;" type="radio" name="5" value="<%= @quiz.r5_3 %>"> <%= @quiz.r5_3 %> <br>

        <br><br>
        <button onclick="Controlla();" class="btn btn-primary">Conferma risposte</button>

 
	<%= link_to '<button id="prossima" disabled="true"  style="float: right; background-color:green;" class="btn btn-primary">Lezione successiva</button>'.html_safe, tutorial_path(:id => @quiz.next) %> 

	<button style="float: right; background-color:red;margin-right: 30px;" onclick="history.go(-1);"  class="btn btn-primary">Ripassa lezione</button>&emsp;
	
       
    </div>
</div>