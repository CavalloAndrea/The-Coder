        <input style="width: 0px;" type="radio" name="2" value="<%= @quiz.r2_1 %>"> <%= @quiz.r2_1 %> <br>
        <input style="width: 0px;" type="radio" name="2" value="<%= @quiz.r2_2 %>"> <%= @quiz.r2_2 %> <br>
        <input style="width: 0px;" type="radio" name="2" value="<%= @quiz.r2_3 %>"> <%= @quiz.r2_3 %> <br>

