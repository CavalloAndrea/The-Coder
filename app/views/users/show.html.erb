<% provide(:title, @user.name) %>

<div class="row">
	<aside class="col-md-4">

		<section>
<h1>
<%= gravatar_for @user %>
<%= @user.name %>
</h1>
</section>
		<section class="stats">
				<%= render 'shared/stats' %>
			</section>
		<section style="line-height: 30px; letter-spacing: 1px">
			Nickname: <b><%= @user.nickname %></b>
			<br>
			Et√†: <b><%= @user.eta %></b>
			<br>
			Sesso: <b><%= @user.sesso %></b>
			<br>
			Livello di esperienza: <b><%= @user.istruzione %></b>
			<br>
			Profilo :
			<% if @user.privato %>
				<b> Privato </b>
			<% else %>
				<b>Pubblico</b>
			<% end %>
			<br>

			Progresso Corsi:
			<br>
			<% if @user.c != '0'%>
			&emsp;<b> C </b>
			<div class="progress" style="width: 250px;margin-left: 50px;">

  			<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60"
  				aria-valuemin="0" aria-valuemax="100" style="width:<%=@user.c%>0%">
    			<b><%=@user.c%>0%</b>
    			
  			</div>
			</div>

			<%end%>


			<% if @user.java != '0'%>
			&emsp;<b> Java </b>
			<div class="progress" style="width: 250px;margin-left: 50px;">

  			<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60"
  				aria-valuemin="0" aria-valuemax="100" style="width:<%=@user.java%>0%">
    			<b><%=@user.java%>0%</b>
    			
  			</div>
			</div>

			<%end%>

			
			<% if @user.python != '0'%>
			&emsp;<b> Python </b>
			<div class="progress" style="width: 250px;margin-left: 50px;">

  			<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60"
  				aria-valuemin="0" aria-valuemax="100" style="width:<%=@user.python%>0%">
    			<b><%=@user.python%>0%</b>
    			
  			</div>
			</div>

			<%end%>


			
			<% if @user.assembly != '0'%>
			&emsp;<b> Assembly </b>
			<div class="progress" style="width: 250px;margin-left: 50px;">

  			<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60"
  				aria-valuemin="0" aria-valuemax="100" style="width:<%=@user.assembly%>0%">
    			<b><%=@user.assembly%>0%</b>
    			
  			</div>
			</div>

			<%end%>

			
			<% if @user.sql != '0'%>
			&emsp;<b> SQL </b>
			<div class="progress" style="width: 250px;margin-left: 50px;">

  			<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60"
  				aria-valuemin="0" aria-valuemax="100" style="width:<%=@user.sql%>0%">
    			<b><%=@user.sql%>0%</b>
    			
  			</div>
			</div>

			<%end%>

			
			<% if @user.html != '0'%>
			&emsp;<b> HTML </b>
			<div class="progress" style="width: 250px;margin-left: 50px;">

  			<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60"
  				aria-valuemin="0" aria-valuemax="100" style="width:<%=@user.html%>0%">
    			<b><%=@user.html%>0%</b>
    			
  			</div>
			</div>

			<%end%>


			<% if @user.javascript != '0'%>
			&emsp;<b> Javascript </b>
			<div class="progress" style="width: 250px;margin-left: 50px;">

  			<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60"
  				aria-valuemin="0" aria-valuemax="100" style="width:<%=@user.javascript%>0%">
    			<b><%=@user.javascript%>0%</b>
    			
  			</div>
			</div>

			<%end%>

			
			<% if @user.css != '0'%>
			&emsp;<b> CSS </b>
			<div class="progress" style="width: 200px;margin-left: 50px;">

  			<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60"
  				aria-valuemin="0" aria-valuemax="100" style="width:<%=@user.css%>0%">
    			<b><%=@user.css%>0%</b>
    			
  			</div>
			</div>

			<%end%>



		</section>
	</aside>
	<div class="col-md-8">
		<%= render 'follow_form' if logged_in? %>
	</div>
	<% if !@user.privato || (current_user.following?(@user) && @user.privato) || current_user?(@user) || current_user.admin?%>
		<div class="col-md-8">
		<% if @user.microposts.any? %>
		<h3>Post (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>
		<%= will_paginate @microposts %>
		<% end%>
	</div>
	<%else%>
	<br><br>
		<h2 style="font-size: 2em !important;">PROFILO PRIVATO</h2>
		<h4>Per vedere i post pubblicati da <%= @user.name%> devi iniziare a seguirlo con il tasto <i>Follow</i> </h4>
	<%end%>
</div>
