<% provide(:title, @user.name) %>

<div class="row">
	<aside class="col-md-4">

		<section>
<h1>
<%= gravatar_for @user %>
<%= @user.name %>
</h1>
</section>
		<section class="stats">
				<%= render 'shared/stats' %>
			</section>
		<section style="line-height: 30px; letter-spacing: 1px">
			Nickname: <b><%= @user.nickname %></b>
			<br>
			Et√†: <b><%= @user.eta %></b>
			<br>
			Sesso: <b><%= @user.sesso %></b>
			<br>
			Livello di esperienza: <b><%= @user.istruzione %></b>
			<br>
		</section>
	</aside>
	<div class="col-md-8">
		<%= render 'follow_form' if logged_in? %>
		<% if @user.microposts.any? %>
		<h3>Post (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>
		<%= will_paginate @microposts %>
		<% end%>
	</div>
</div>
